package playtestApp;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JTextField;
import javax.swing.JButton;
import javax.swing.JLabel;

public class TimerEditor extends JFrame {

	private JPanel contentPane;
	private JTextField txtTimer;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					TimerEditor frame = new TimerEditor();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public TimerEditor() {
		setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setResizable(false);

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		txtTimer = new JTextField();
		txtTimer.setBounds(60, 65, 326, 93);
		contentPane.add(txtTimer);
		txtTimer.setColumns(10);
		
		JButton btnReset = new JButton("Reset");
		btnReset.setBounds(85, 193, 117, 29);
		contentPane.add(btnReset);
		
		JButton btnSetTimer = new JButton("Set");
		btnSetTimer.setBounds(214, 193, 117, 29);
		contentPane.add(btnSetTimer);
		
		JLabel lblTitle = new JLabel("Edit Timer");
		lblTitle.setBounds(164, 32, 117, 16);
		contentPane.add(lblTitle);
	}
}
